
@{
    ViewData["Title"] = "Consulta";
}

    <div id="" class="container" align="center">
        <h2>Cadastro de Produto</h2>
        <br />
        <form>
            <div class="form-group">
                <label for="formGroupExampleInput">Codigo Produto</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Codigo Produto" style="width: 300px;">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Nome Produto</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Nome Produto" style="width: 300px;">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Categoria</label>
                <select class="form-control" id="categoria" style="width: 300px;">
                    <option value="" selected disabled hidden>Selecione uma categoria</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Quantidade</label>
                <input type="number" class="form-control col-xs-3" id="formGroupExampleInput2" placeholder="Quantidade" style="width: 300px;">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Preço</label>
                <input type="number" class="form-control col-xs-3" id="formGroupExampleInput2" placeholder="Preço" style="width: 300px;">
            </div>
        </form>
        <button class="btn btn-success">Cadastrar <i class="fa fa-check"></i></button>
        <button class="btn btn-secondary">Voltar <i class="fa fa-arrow-left"></i></button>
    </div>



